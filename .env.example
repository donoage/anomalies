# Polygon.io API Configuration
POLYGON_API_KEY=your_polygon_api_key_here

# S3 Flat Files Credentials (REQUIRED for flat files)
# Get these from https://polygon.io/dashboard (different from API key!)
POLYGON_S3_ACCESS_KEY=your_s3_access_key_here
POLYGON_S3_SECRET_KEY=your_s3_secret_key_here

# Database Configuration
# For local development: sqlite:///anomalies.db
# For Railway: Use Railway's PostgreSQL DATABASE_URL (automatically provided)
DATABASE_URL=sqlite:///anomalies.db

# Flask Configuration
FLASK_SECRET_KEY=your_secret_key_here
PORT=8888

# Scheduling Configuration (Eastern Time)
EOD_SCHEDULE_TIME=16:30
TIMEZONE=America/New_York

# Anomaly Detection Configuration
LOOKBACK_DAYS=5
Z_SCORE_THRESHOLD=3.0

# Data Source Configuration
# Use Flat Files (true) or REST API (false)
USE_FLAT_FILES=true
# Filter for dark pool trades only (requires USE_TRADES_FILES=true)
DARK_POOL_ONLY=true
# Use trades files (true) for dark pool filtering, or day aggregates (false) for speed
# Note: Trades files are much larger and slower to process
USE_TRADES_FILES=true

# Data Storage
DATA_DIR=./data

